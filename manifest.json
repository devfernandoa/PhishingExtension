{
    "manifest_version": 2,
    "name": "Phishing Detector",
    "version": "1.0",
    "description": "Warns you about phishing websites using a remote analysis backend.",
    "permissions": [
        "tabs",
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
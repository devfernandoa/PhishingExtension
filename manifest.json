{
    "manifest_version": 2,
    "name": "Phishing Detector",
    "version": "1.1",
    "description": "Warns you about phishing websites using a remote analysis backend.",
    "permissions": [
        "tabs",
        "notifications",
        "http://*/",
        "https://*/",
        "webNavigation"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}